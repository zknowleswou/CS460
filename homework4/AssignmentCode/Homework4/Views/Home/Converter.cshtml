@model dynamic

    @{
        ViewBag.Title = "Converter";
        Layout = "../Shared/_Layout.cshtml";
    }

    <h2>Converter</h2>
    <div class="row">
        <form>
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="miles">Email address</label>
                    <input type="number" class="form-control" id="miles" placeholder="Miles">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="radio">
                    <label>
                        <input type="radio" name="unit1" id="unit1" value="kilometers" checked>
                        Kilometers
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="unit2" id="unit2" value="option2">
                        Option two can be something else and selecting it will deselect option one
                    </label>
                </div>
                <div class="radio disabled">
                    <label>
                        <input type="radio" name="unit3" id="unit3" value="option3" disabled>
                        Option three is disabled
                    </label>
                </div>
            </div>
        </form>
    </div>